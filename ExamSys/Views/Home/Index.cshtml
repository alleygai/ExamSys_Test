<div class="row">
    <div id="myAlert" class="alert alert-info" style="display:none;">
        <a href="#" class="close" data-dismiss="alert">&times;</a>
        <strong>添加试题成功！</strong>
    </div>

    <div class="loader"></div>

    <div class="col-sm-12" id="tabs">
        <ul class="tabs">
            <li class="tab col s12 m4"><a href="#AddQ">添加试题</a></li>
            <li class="tab col s12 m4"><a href="#EditQ">编辑试题</a></li>
            <li class="tab col s12 m4"><a href="#Exam">生成试题</a></li>
        </ul>
        <div id="AddQ">
            <div class="row">
                @Html.DropDownList("employeeType", (IList<SelectListItem>)ViewBag.EmployeeType)
                @Html.DropDownList("subjectType", (IList<SelectListItem>)ViewBag.SubjectType)
            </div>
            <div class="row">
                <label for="title">题目</label>
                <input type="text" class="form-control" id="title" placeholder="题目">
            </div>
            <div class="row">
                <label for="content">内容</label>
                <textarea class="form-control" rows="8" id="content" placeholder="题目内容"></textarea>
            </div>
            <div class="row">
                <label for="answer">答案</label>
                <textarea class="form-control" rows="6" id="answer" placeholder="答案"></textarea>
            </div>
            <div class="row">
                <button type="button" class="btn btn-default" onclick="SubmitSubject();">提交</button>
            </div>
        </div>
        <div id="EditQ">
            <div class="row">
                @Html.DropDownList("employeeType", (IList<SelectListItem>)ViewBag.EmployeeType)
                @Html.DropDownList("subjectType", (IList<SelectListItem>)ViewBag.SubjectType)
                <button type="button" class="btn btn-sm" onclick="GetQuestions();">搜索</button>
            </div>
            <div class="row">
                <div id="QuestionsGrid"></div>
            </div>
        </div>
        <div id="Exam">
            <div class="row">
                @Html.DropDownList("employeeTypeT3", (IList<SelectListItem>)ViewBag.EmployeeType)
                @Html.DropDownList("subjectTypeT3", (IList<SelectListItem>)ViewBag.SubjectType)
                <button type="button" class="btn btn-sm" onclick="GeneratePaper();">生成</button>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#tabs').tabs();
    });

    function GetQuestions() {
        var source = {
            datatype: "json",
            datafields: [{ name: 'ID', },
			 		     { name: 'Title' },
					     { name: 'Content' },
					     { name: 'Answer' }],
            url: 'Questions/GetQuestions',
            root: 'Rows',
            beforeprocessing: function (data) {
                source.totalrecords = data.TotalRows;
            }
        };
        var dataadapter = new $.jqx.dataAdapter(source, {
            loadError: function (xhr, status, error) {
                alert(error);
            }
        });

        $("#QuestionsGrid").jqxGrid(
                {
                    source: dataadapter,
                    pageable: true,
                    columns: [
                      { text: '编号', datafield: 'ID', width: 100 },
                      { text: '题目', datafield: 'Title', width: 100 },
                      { text: '试题内容', datafield: 'Content', width: 100 },
                      { text: '答案', datafield: 'Answer', width: 180 }
                    ]
                });
        $("#QuestionsGrid").jqxGrid('hidecolumn', 'ID');
    }

    function GeneratePaper() {
        if ($("#subjectTypeT3").val() == "0") {
            alert("请选择题目类型");
            return;
        }
        if ($("#employeeTypeT3").val() == "0") {
            alert("请选择工种类型");
            return;
        }
        window.location = "/Word/Download?subjectType=" + $("#subjectTypeT3").val() + "&employeeType=" + $("#employeeTypeT3").val();
    }

    function SubmitSubject() {
        document.getElementById("GlobalPreLoader").style.display = "block";
        if ($("#subjectType").val() == "0") {
            alert("请选择题目类型");
            return;
        }
        if ($("#employeeType").val() == "0") {
            alert("请选择工种类型");
            return;
        }
        var postData = {
            title: $("#title").val(),
            content: $("#content").val(),
            answer: $("#answer").val(),
            subjectType: $("#subjectType").val(),
            employeeType: $("#employeeType").val()
        };

        $.ajax({
            url: '/Questions/AddQ',
            type: 'POST',
            data: postData,
            async: false,
            error: function (xhr) {
                alert('Error: ' + xhr.statusText);
            },
            success: function (result) {
                $("#myAlert").fadeIn(1500);
                $("#title").val('');
                $("#content").val('');
                $("#answer").val('');
                $("#myAlert").fadeOut(1500);
            }
        });
    }
</script>